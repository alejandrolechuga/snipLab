{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "allowJs": false
  },
  "include": [
    "src/**/*",
    "utils/**/*.ts",
    "lib/**/*.ts",
    "webpack.config.ts",
    "jest.config.ts",
    "jest.setup.ts",
    "__mocks__/**/*.ts",
    "tailwind.config.ts",
    "postcss.config.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "dist"
  ]
}